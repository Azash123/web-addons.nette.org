{block content}

<table class="table table-bordered">
	<tr>
		<th>Name</th>
		<th>Author</th>
		<th>Tags</th>
	</tr>
	<tr n:foreach="$addons as $addon">
		<td>{$addon->name}</td>
		<td>{$addon->user->name}</td>
		<td>
		{foreach $addon->related('addon_tag') as $addonTag}
		<span class="label">{$addonTag->tag->name}</span>
		{/foreach}
		</td>
	</tr>
</table>
